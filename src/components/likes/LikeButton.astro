---
import { Icon } from 'astro-icon/components';

export interface Props {
  commentId: number;
  initialLikes: number;
}

const { commentId, initialLikes } = Astro.props;
---

<button
  data-comment-id={commentId}
  class="like-button flex items-center space-x-1 text-gray-500 hover:text-red-500 transition-colors duration-200"
>
  <Icon name="tabler:heart" class="w-5 h-5" />
  <span class="like-count font-medium">{initialLikes}</span>
</button>


