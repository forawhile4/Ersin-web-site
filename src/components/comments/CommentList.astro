---
import LikeButton from '../likes/LikeButton.astro';

export interface Comment {
  id: number;
  created_at: string;
  post_slug: string;
  author_name: string;
  content: string;
  likes_count: number;
}

export interface Props {
  comments: Comment[];
}

const { comments } = Astro.props;
---

<div id="comment-list">
  {comments && comments.length > 0 ? (
    <ul class="space-y-6">
      {comments.map((comment) => (
        <li class="p-4 bg-gray-50 dark:bg-slate-800/50 rounded-lg shadow-sm">
          <div class="flex justify-between items-start">
            <div>
              <p class="font-bold text-gray-900 dark:text-white">{comment.author_name}</p>
              <p class="text-sm text-gray-500 dark:text-slate-400 mt-0.5">
                {new Date(comment.created_at).toLocaleString('tr-TR', { day: '2-digit', month: 'long', year: 'numeric', hour: '2-digit', minute: '2-digit' })}
              </p>
            </div>
            <LikeButton commentId={comment.id} initialLikes={comment.likes_count} />
          </div>
          <p class="mt-3 text-gray-700 dark:text-slate-300 whitespace-pre-wrap">{comment.content}</p>
        </li>
      ))}
    </ul>
  ) : (
    <p id="no-comments-message" class="text-center text-gray-500 dark:text-slate-400 py-4">Henüz hiç yorum yapılmamış. İlk yorumu siz yapın!</p>
  )}
</div>
