---
// This script is injected into the <head> of the page to apply the theme before the page is rendered.
// This prevents the flash of unstyled content (FOUC) and ensures theme persistence.
const script = `
const themes = ['dark', 'theme-dark-blue', 'theme-light-blue', 'light'];
const darkThemeNames = ['dark', 'theme-dark-blue'];

const theme = (() => {
  if (typeof localStorage !== 'undefined' && localStorage.getItem('theme')) {
    return localStorage.getItem('theme');
  }
  if (window.matchMedia('(prefers-color-scheme: dark)').matches) {
    return 'dark';
  }
  return 'dark';
})();

if (theme && theme !== 'light' && theme !== 'dark') {
  document.documentElement.classList.add(theme);
}

if (theme && darkThemeNames.includes(theme)) {
  document.documentElement.classList.add('dark');
} else {
  document.documentElement.classList.remove('dark');
}
`;
---

<script is:inline set:html={script} />
