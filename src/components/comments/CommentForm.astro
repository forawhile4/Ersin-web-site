---
export interface Props {
  post_slug: string;
}

const { post_slug } = Astro.props;
---

<form id="comment-form" class="mb-8 p-6 bg-white dark:bg-slate-800 rounded-lg shadow">
  <input type="hidden" name="post_slug" value={post_slug} />
  <div class="mb-4">
    <label for="author_name" class="block text-sm font-medium text-gray-700 dark:text-slate-300">Adınız</label>
    <input type="text" id="author_name" name="author_name" required class="mt-1 block w-full px-3 py-2 border border-gray-300 dark:border-slate-600 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 bg-gray-50 dark:bg-slate-700">
  </div>
  <div class="mb-4">
    <label for="content" class="block text-sm font-medium text-gray-700 dark:text-slate-300">Yorumunuz</label>
    <textarea id="content" name="content" rows="4" required class="mt-1 block w-full px-3 py-2 border border-gray-300 dark:border-slate-600 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 bg-gray-50 dark:bg-slate-700"></textarea>
  </div>
  <button type="submit" class="w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">Yorumu Gönder</button>
  <p id="form-status" class="text-sm mt-3 text-center"></p>
</form>
